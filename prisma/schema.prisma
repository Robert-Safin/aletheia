// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
  name  String @unique
  isAdmin Boolean @default(false)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt


  venues Venue[]
}

model Venue {
  id   Int     @id @default(autoincrement())
  name String
  about String @db.VarChar(1000)
  category1 String @default("")
  category2 String @default("")
  category3 String @default("")
  category4 String @default("")
  category5 String @default("")
  phoneNumber String @default("")
  website String @default("")
  address String
  formattedAddress String @default("")
  city String @default("")
  averageRating Float @default(0)
  mainPhoto String
  longitude Float @default(0)
  latitude Float @default(0)
  isVerified Boolean @default(false)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  owner User @relation(fields: [ownerId], references: [id])
  @@index([ownerId])
  ownerId Int

  events Event[]
  offers Offer[]
  reviews Review[]
}

model Review {
  id Int @id @default(autoincrement())
  rating Int
  comment String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  venue Venue @relation(fields: [venueId], references: [id])
  @@index([venueId])
  venueId Int
}

model Event {
  id Int @id @default(autoincrement())
  name String
  start DateTime
  end DateTime
  description String
  QRQuntity Int @default(0)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt


  venue Venue @relation(fields: [venueId], references: [id])
  @@index([venueId])
  venueId Int

  QREvents QREvent[]
}

model Offer {
  id Int @id @default(autoincrement())
  name String
  start DateTime
  end DateTime
  description String
  QRQuntity Int @default(0)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt


  venue Venue @relation(fields: [venueId], references: [id])
  @@index([venueId])
  venueId Int

  QROffers QROffer[]
}


model QREvent {
  id Int @id @default(autoincrement())
  image String
  isRedeemed Boolean @default(false)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id])
  @@index([eventId])
  eventId Int
}


model QROffer {
  id Int @id @default(autoincrement())
  image String
  isRedeemed Boolean @default(false)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  offer Offer @relation(fields: [offerId], references: [id])
  @@index([offerId])
  offerId Int
}
